---
import '../styles/global.css';

// src/components/PreHeader.astro
import { site } from "../config/site"

const {
  phone,
  phoneHref,
  email,
  hours,
  socials,
} = site
---

<div class="preheader" role="region" aria-label="Top info bar">
  <div class="container">
    <div class="left">
      <span class="item" aria-label="Google rating">
        <strong>4.9 Stars</strong> <span>on Google</span>
        <img src="/images/5-star.png" alt="5 stars" class="stars" />
      </span>
    </div>

    <div class="right">
      {phone && (
        <span class="item" aria-label="Call today">
          <span>Call Today: </span>
          <a class="phone-link" href={phoneHref}><strong>{phone}</strong></a>
        </span>
      )}
    </div>
  </div>
</div>