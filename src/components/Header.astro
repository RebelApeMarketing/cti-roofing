---
import ButtonPhoneNumber from "./ButtonPhoneNumber.astro";
import GoogleRating from "./GoogleRating.astro";
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white shadow-sm">
  <div class="max-w-6xl mx-auto px-6 py-3">
    <!-- Mobile Layout -->
    <div class="flex md:hidden items-center justify-between gap-3 mb-3">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2">
        <img src="https://RebelApeCDN.b-cdn.net/CTI-Roofing/cti-roofing-logo.webp" alt="CTI Roofing Logo" class="h-16 w-auto" />
      </a>

      <!-- Google Reviews Badge (Mobile) -->
      <a href="https://www.google.com/search?q=CTI+Roofing+Bountiful+Utah+reviews" target="_blank" rel="noopener noreferrer" class="flex items-center gap-1.5 px-2.5 py-1.5 bg-slate-50 rounded-lg border border-slate-200 hover:bg-slate-100 transition cursor-pointer">
        <!-- Google Logo -->
        <div class="flex items-center gap-0">
          <span class="text-sm font-bold">
            <span style="color: #4285F4">G</span><span style="color: #EA4335">o</span><span style="color: #FBBC04">o</span><span style="color: #4285F4">g</span><span style="color: #34A853">l</span><span style="color: #EA4335">e</span>
          </span>
        </div>
        <!-- Rating -->
        <div class="flex flex-col items-center gap-0">
          <div class="flex gap-0.5">
            <span class="text-yellow-400 text-xs">★</span>
            <span class="text-yellow-400 text-xs">★</span>
            <span class="text-yellow-400 text-xs">★</span>
            <span class="text-yellow-400 text-xs">★</span>
            <span class="text-yellow-400 text-xs">★</span>
          </div>
          <span class="text-xs text-slate-600 font-semibold">4.9★</span>
        </div>
      </a>
    </div>

    <!-- Call Button (Mobile Full Width) -->
    <a
      href="tel:4805308346"
      class="md:hidden rounded-lg bg-[#76ba41] text-white px-6 py-3 font-semibold hover:bg-[#5fa033] transition duration-200 flex items-center gap-2 shadow-lg hover:shadow-2xl drop-shadow-lg whitespace-nowrap text-base justify-center w-full"
    >
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
        <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z" />
      </svg>
      Call Now
    </a>

    <!-- Desktop Layout -->
    <div class="hidden md:flex items-center justify-between gap-6">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2">
        <img src="https://RebelApeCDN.b-cdn.net/CTI-Roofing/cti-roofing-logo.webp" alt="CTI Roofing Logo" class="h-14 w-auto" />
      </a>

      <!-- Right Side: Google Reviews + Call Button -->
      <div class="flex items-center gap-6">
        <GoogleRating />
        <ButtonPhoneNumber />
      </div>
    </div>
  </div>
</header>

<!-- Spacer to account for fixed header -->
<div class="h-32 md:h-20"></div>