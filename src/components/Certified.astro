---
interface Props {
  bgColor?: string;
  bgPattern?: string;
  showDotMatrix?: boolean;
}

const { bgColor = 'bg-slate-100', bgPattern = '', showDotMatrix = true } = Astro.props;
---

<section class={`px-6 py-16 md:py-24 relative overflow-hidden ${bgColor} ${bgPattern}`}>
  {showDotMatrix && (
    <div class="absolute inset-0 opacity-7" style="background-image: radial-gradient(circle, #1d3466 1.5px, transparent 1.5px); background-size: 12px 12px;"></div>
  )}
  <div class="max-w-7xl mx-auto relative z-10">
    <!-- Header -->
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold text-slate-900 mb-2">
        Highly Certified & Recognized
      </h2>
      <p class="text-lg text-slate-600">
        Industry-leading certifications and recognitions you can trust
      </p>
    </div>

    <!-- Logos Grid -->
    <div class="grid grid-cols-2 md:grid-cols-6 gap-6 md:gap-8">
      
      <!-- BBB Logo -->
      <div class="bg-white rounded-lg shadow-lg hover:shadow-xl transition-shadow p-4 flex items-center justify-center h-32">
        <img 
          src="https://RebelApeCDN.b-cdn.net/CTI-Roofing/bbb-logo.webp" 
          alt="BBB Accredited"
          class="h-full w-full object-contain"
        />
      </div>

      <!-- CertainTeed Logo -->
      <div class="bg-white rounded-lg shadow-lg hover:shadow-xl transition-shadow p-4 flex items-center justify-center h-32">
        <img 
          src="https://RebelApeCDN.b-cdn.net/CTI-Roofing/certainteed-logo.webp" 
          alt="CertainTeed Master Applicator"
          class="h-full w-full object-contain"
        />
      </div>

      <!-- Eagle Logo -->
      <div class="bg-white rounded-lg shadow-lg hover:shadow-xl transition-shadow p-4 flex items-center justify-center h-32">
        <img 
          src="https://RebelApeCDN.b-cdn.net/CTI-Roofing/eagle-logo.webp" 
          alt="Eagle Certification"
          class="h-full w-full object-contain"
        />
      </div>

      <!-- Google Guaranteed Logo -->
      <div class="bg-white rounded-lg shadow-lg hover:shadow-xl transition-shadow p-4 flex items-center justify-center h-32">
        <img 
          src="https://RebelApeCDN.b-cdn.net/CTI-Roofing/google-guaranteed-logo.webp" 
          alt="Google Guaranteed"
          class="h-full w-full object-contain"
        />
      </div>

      <!-- Home Advisor Logo -->
      <div class="bg-white rounded-lg shadow-lg hover:shadow-xl transition-shadow p-4 flex items-center justify-center h-32">
        <img 
          src="https://RebelApeCDN.b-cdn.net/CTI-Roofing/home-advisor-logo.webp" 
          alt="Home Advisor"
          class="h-full w-full object-contain"
        />
      </div>

      <!-- Licensed Guarantee Logo -->
      <div class="bg-white rounded-lg shadow-lg hover:shadow-xl transition-shadow p-4 flex items-center justify-center h-32">
        <img 
          src="https://RebelApeCDN.b-cdn.net/CTI-Roofing/licenced-gurantee-logo.webp" 
          alt="Licensed and Guaranteed"
          class="h-full w-full object-contain"
        />
      </div>

      <!-- Porch Best Of Logo -->
      <div class="bg-white rounded-lg shadow-lg hover:shadow-xl transition-shadow p-4 flex items-center justify-center h-32">
        <img 
          src="https://RebelApeCDN.b-cdn.net/CTI-Roofing/porch-best-of-logo.webp" 
          alt="Porch Best Of"
          class="h-full w-full object-contain"
        />
      </div>

      <!-- Porch Background Check Logo -->
