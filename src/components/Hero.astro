---
/**
 * Hero.astro
 * Reusable hero with configurable eyebrow, headline, subhead, button, and background image.
 * Usage:
 *  <Hero
 *    eyebrow="HOME SERVICES MARKETING AGENCY"
 *    headline="Get a Higher ROI on Your Marketing Spend Without Wasting $1,000's with a Generic Agency"
 *    subhead="We've created a custom tailored marketing framework specifically for home service companies..."
 *    ctaText="Schedule a Free Consultation"
 *    ctaHref="/contact"
 *    bgImage="/images/hero-bg.jpg"
 *  />
 */

export interface Props {
  eyebrow?: string
  headline?: string
  subhead?: string
  ctaText?: string
  ctaHref?: string
  bgImage?: string
  bgColor?: string
  desktopHeight?: string // e.g. "650px"
  headlineGradientAll?: boolean
}

const {
  eyebrow = "HOME SERVICES MARKETING AGENCY",
  headline = "Get a Higher ROI on Your Marketing Spend Without Wasting $1,000's with a Generic Agency",
  subhead = "We've created a custom tailored marketing framework specifically for home service companies. That means we aren't trying to figure out your industry while also working with dentists, real estate agents, and brokers. It's only home services, that's what we do.",
  ctaText = "Schedule a Free Consultation",
  ctaHref = "#",
  bgImage = "/images/hero-new-roof.webp",
  bgColor = "#0f172a",
  desktopHeight = "650px",
  headlineGradientAll = false,
} = Astro.props;
---

<section class="hero" style={`--hero-bg: url('${bgImage}'); --hero-h: ${desktopHeight}; --hero-bg-color: ${bgColor};`}>
  <div class="inner">
    <div class="content">
      {eyebrow && <div class="eyebrow">{eyebrow}</div>}
      {headline && <h1 class={`headline ${headlineGradientAll ? 'text-grad' : ''}`} set:html={headline}></h1>}
      {subhead && <p class="subhead">{subhead}</p>}
      {ctaText && (
        <div class="actions">
          <a class="btn" href={ctaHref}>{ctaText}</a>
        </div>
      )}
    </div>
  </div>
</section>