---
import { site } from "../config/site"
import "../styles/global.css"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import ThemeVars from "../components/ThemeVars.astro"
const { title = site.companyName, description = site.companyName } = Astro.props
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <ThemeVars />
    <!-- You can load your global theme vars or components here -->
    <slot /> <!-- this is where page content gets injected -->
    <Footer />
  </body>
</html>